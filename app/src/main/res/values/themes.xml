<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PocketCloset" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item> <!-- Disable system-enforced dark mode -->
        <item name="android:windowBackground">#FFFFFFFF</item>
        <item name="colorSurface">#FFFFFFFF</item>
        <item name="colorPrimary">#ce3131</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <!-- Background color for the navigation pane -->
        <item name="backgroundTint">#eedbd9</item>
        <!-- Remove elevation/shadow -->
        <item name="elevation">0dp</item>
        <!-- Optional: remove ripple effect -->
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>


    <style name="Theme.PocketCloset" parent="Base.Theme.PocketCloset" />
</resources>
