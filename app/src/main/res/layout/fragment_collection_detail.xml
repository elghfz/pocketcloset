<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- RecyclerView for displaying clothes in the collection -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <!-- Buttons for managing collection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/selectionModeButtons">

        <!-- Delete Button (Visible in selection mode) -->
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:visibility="gone" />

        <!-- Remove From Collection Button (Visible in selection mode) -->
        <Button
            android:id="@+id/removeFromCollectionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remove from Collection"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Add Clothes Button (Visible outside selection mode) -->
    <Button
        android:id="@+id/button_add_clothes_to_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Clothes" />
</LinearLayout>
