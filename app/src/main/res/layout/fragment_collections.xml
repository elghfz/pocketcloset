<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Space at the top -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse your collections..."
        android:textSize="20sp"
        android:textColor="?android:textColorPrimary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Space between the title and the collection list -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="26dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/collectionRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="8dp">

        <!-- Add Collection Button -->
        <ImageButton
            android:id="@+id/addCollectionButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/circular_button"
            android:scaleType="centerInside"
            android:src="@drawable/add_icon"
            android:contentDescription="Add Collection"
            android:layout_marginEnd="8dp" />

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/circular_button"
            android:scaleType="centerInside"
            android:src="@drawable/delete_icon"
            android:contentDescription="Delete Collection"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
