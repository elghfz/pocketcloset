<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Image of the clothing item -->
    <ImageView
        android:id="@+id/imageViewClothing"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Clothing Image"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Clothing Tags -->
    <TextView
        android:id="@+id/textViewClothingTags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tags"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewClothing"
        app:layout_constraintEnd_toStartOf="@id/buttonEditClothing"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Edit Button -->
    <Button
        android:id="@+id/buttonEditClothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonDeleteClothing"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Delete Button -->
    <Button
        android:id="@+id/buttonDeleteClothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <!-- Remove From Collection Button (Visible only in Collection Detail Fragment) -->
    <Button
        android:id="@+id/buttonRemoveFromCollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove from Collection"
        app:layout_constraintTop_toBottomOf="@id/buttonEditClothing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" /> <!-- Initially hidden -->
</androidx.constraintlayout.widget.ConstraintLayout>
