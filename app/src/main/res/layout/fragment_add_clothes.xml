<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Space at the top -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <!-- Image View for displaying the current image -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:contentDescription="Selected image" />

    <!-- Tags Input Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="16dp">

        <!-- EditText for entering tags -->
        <EditText
            android:id="@+id/tagsEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter tags"
            android:inputType="text" />

        <!-- Add Tag Button -->
        <ImageButton
            android:id="@+id/addTagButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/circular_button"
            android:src="@drawable/add_tag_icon"
            android:scaleType="centerInside"
            android:layout_marginEnd="8dp"
            android:contentDescription="Cancel" />
    </LinearLayout>

    <!-- Dynamic Tags Display -->
    <LinearLayout
        android:id="@+id/addedTagsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        android:gravity="start"
        android:layout_marginTop="8dp"
        android:background="?android:attr/windowBackground">
    </LinearLayout>

    <!-- Save and Cancel Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="8dp"
        android:paddingRight="8dp">

        <ImageButton
            android:id="@+id/cancelButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/circular_button"
            android:src="@drawable/cancel_icon"
            android:scaleType="centerInside"
            android:layout_marginEnd="8dp"
            android:contentDescription="Cancel" />

        <ImageButton
            android:id="@+id/saveButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/circular_button"
            android:src="@drawable/save_icon"
            android:scaleType="centerInside"
            android:contentDescription="Save" />
    </LinearLayout>

    <!-- Tag Suggestions RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tagSuggestionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>
